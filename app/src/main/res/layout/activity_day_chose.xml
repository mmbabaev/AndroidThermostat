<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.example.mihail.hti16.DayChoseActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        style="@style/Theme.AppCompat.Light.DarkActionBar"
        android:singleLine="false"
        android:onClick="onSetButton"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button">

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:id="@+id/checkBox"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:id="@+id/checkBox2"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:id="@+id/checkBox3"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_below="@+id/checkBox2"
            android:layout_alignLeft="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2"
            android:layout_marginTop="4dp" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:id="@+id/checkBox4"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_below="@+id/checkBox3"
            android:layout_alignLeft="@+id/checkBox3"
            android:layout_alignStart="@+id/checkBox3"
            android:layout_marginTop="4dp" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:id="@+id/checkBox5"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_below="@+id/checkBox4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:id="@+id/checkBox6"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_below="@+id/checkBox5"
            android:layout_alignLeft="@+id/checkBox5"
            android:layout_alignStart="@+id/checkBox5"
            android:layout_marginTop="4dp" />

        <CheckBox
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:id="@+id/checkBox7"
            android:background="@drawable/customborder"
            android:checked="false"
            android:enabled="true"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="normal"
            style="@style/AppTheme"
            android:layout_below="@+id/checkBox6"
            android:layout_alignLeft="@+id/checkBox6"
            android:layout_alignStart="@+id/checkBox6"
            android:layout_marginTop="4dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set to many"
            android:id="@+id/switch4"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/checkBox7"
            android:layout_alignStart="@+id/checkBox7"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>
</RelativeLayout>
