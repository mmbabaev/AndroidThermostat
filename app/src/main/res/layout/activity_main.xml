<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainActivity"
    android:orientation="vertical"
    android:configChanges="orientation|screenSize"
    android:screenOrientation="portrait">>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="SET"
        android:id="@+id/setButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/settings"
        android:padding="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/settingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/calendar"
        android:padding="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/calendarButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="temper"
        android:textSize = "45sp"
        android:id="@+id/textView"
        android:layout_below="@+id/timeText"
        android:layout_centerHorizontal="true" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.mihail.hti16.DataPicker"
        android:id="@+id/dpLeft"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView8"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_above="@+id/textView14" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.mihail.hti16.DataPicker"
        android:id="@+id/dpRight"
        android:layout_alignTop="@+id/dpLeft"
        android:layout_toEndOf="@+id/topImage"
        android:layout_toRightOf="@+id/topImage"
        android:layout_above="@+id/textView12" />



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sun"
        android:padding="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/topImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/dpRight"
        android:layout_toStartOf="@+id/dpRight"
        android:text="   " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView9"
        android:layout_above="@+id/setButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView10"
        android:layout_above="@+id/setButton"
        android:layout_alignRight="@+id/setButton"
        android:layout_alignEnd="@+id/setButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView11"
        android:layout_above="@+id/textView10"
        android:layout_alignRight="@+id/dpRight"
        android:layout_alignEnd="@+id/dpRight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView12"
        android:layout_above="@+id/textView11"
        android:layout_alignRight="@+id/dpRight"
        android:layout_alignEnd="@+id/dpRight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView14"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView15"
        android:layout_above="@+id/setButton"
        android:layout_alignLeft="@+id/dpRight"
        android:layout_alignStart="@+id/dpRight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="."
        android:id="@+id/textView16"
        android:textSize="80dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"
        android:layout_marginRight="-7dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="timetimetime"
        android:textSize="30sp"
        android:id="@+id/timeText"
        android:layout_below="@+id/topImage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
